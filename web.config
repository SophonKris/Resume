<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- 设置默认文档 -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.html" />
            </files>
        </defaultDocument>
        
        <!-- 启用详细错误信息以便调试 -->
        <httpErrors errorMode="Detailed" />
        
        <!-- 禁用目录浏览 -->
        <directoryBrowse enabled="false" />
    </system.webServer>
    
    <!-- 传统配置 -->
    <system.web>
        <customErrors mode="Off" />
        <compilation debug="true" />
    </system.web>
</configuration>